@model List<TMDT.Models.SanPham>

@{
    ViewBag.Title = "Product1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-4 col-sm-6 col-6">
                                   <div class="single-product">
     Product Image Start 
    <div class="pro-img">
        <a href="@Url.Action("Cart","Default")">
            <img class="primary-img" src="~/Content/img\products\@item.Image" alt="single-product">
            <img class="secondary-img" src="~/Content/img\products\@item.Image" alt="single-product">
        </a>
        <a href="#" class="quick_view" data-toggle="modal" data-target="#myModal" title="Quick View"><i class="lnr lnr-magnifier"></i></a>
    </div>
     Product Image End 
     Product Content Start 
    <div class="pro-content">
        <div class="pro-info">
            <h4><a href="@Url.Action("Cart","Default")">@item.TenSP</a></h4>
            <p><span class="price">@item.DonGia</span><del class="prev-price">@item.DonGia</del></p>
            <div class="label-product l_sale">30<span class="symbol-percent">%</span></div>
        </div>
        <div class="pro-actions">
            <div class="actions-primary">
                <a href="@Url.Action("Cart","Default")" title="Add to Cart"> + Add To Cart</a>
            </div>
            <div class="actions-secondary">
                <a href="@Url.Action("Compare","Default")" title="Compare"><i class="lnr lnr-sync"></i> <span>Add To Compare</span></a>
                <a href="@Url.Action("Wishlish","Default")" title="WishList"><i class="lnr lnr-heart"></i> <span>Add to WishList</span></a>
            </div>
        </div>
    </div>
     Product Content End 
    </div>
    </div>
}
