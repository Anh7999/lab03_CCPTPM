@model IEnumerable<TMDT.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý loại sản phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Tên loại sản phẩm
                </th>
                <th>
                    Hiển thị
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLoaiSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hide)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdLoaiSP }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdLoaiSP }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdLoaiSP })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
