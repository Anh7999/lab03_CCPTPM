@model IEnumerable<TMDT.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý sản phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Số lượng tồn
                </th>
                <th>
                    Khuyến mãi
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MotaSP)
                    </td>
                    <td>
                        <img src="~/Content/anh/@item.Images" width="50px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soluongton)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhuyenMai.MucKM)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdSP }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdSP }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdSP })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
