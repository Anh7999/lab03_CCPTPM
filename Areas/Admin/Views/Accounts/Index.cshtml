@model IEnumerable<TMDT.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý khách hàng</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Tên khách hàng
                </th>
                <th>
                    Tài khoản
                </th>
                <th>
                    Mật khẩu
                </th>
                <th>
                    Email
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Ngày đăng ký
                </th>

                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matkhau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiachiKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sdt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ngaydangki)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaKH }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaKH }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaKH })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>
