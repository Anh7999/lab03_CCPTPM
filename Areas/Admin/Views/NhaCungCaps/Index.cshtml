@model IEnumerable<TMDT.Models.NhaCungCap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý nhà cung cấp</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Tên nhà cung cấp
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNCC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diachi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DienThoai)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdNCC }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdNCC }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdNCC })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>
