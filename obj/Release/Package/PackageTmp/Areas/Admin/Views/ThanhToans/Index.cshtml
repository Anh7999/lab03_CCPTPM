@model IEnumerable<TMDT.Models.ThanhToan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý hình thức thanh toán</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Hình thức thanh toán
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HinhthucTT)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdTT }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdTT }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdTT })
        </td>
    </tr>
}

</table>
